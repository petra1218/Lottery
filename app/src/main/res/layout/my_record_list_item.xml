<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_record_list_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="2dp"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/official_red_1"
        style="@style/BalloonText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="4dp" />


    <TextView
        android:id="@+id/official_red_2"
        style="@style/BalloonText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@+id/official_red_1"
        tools:layout_editor_absoluteY="4dp" />

    <TextView
        android:id="@+id/official_red_3"
        style="@style/BalloonText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@+id/official_red_2"
        tools:layout_editor_absoluteY="4dp" />


    <TextView
        android:id="@+id/official_red_4"
        style="@style/BalloonText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@+id/official_red_3"
        tools:layout_editor_absoluteY="4dp" />

    <TextView
        android:id="@+id/official_red_5"
        style="@style/BalloonText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@+id/official_red_4"
        tools:layout_editor_absoluteY="4dp" />

    <TextView
        android:id="@+id/official_red_6"
        style="@style/BalloonText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@+id/official_red_5"
        tools:layout_editor_absoluteY="4dp" />


    <TextView
        android:id="@+id/official_blue"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="18dp"
        android:background="@drawable/balloon_shape_blue"
        android:gravity="center"
        android:text="11"
        android:textSize="18sp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toEndOf="@+id/official_red_6"
        tools:layout_editor_absoluteY="4dp" />


</android.support.constraint.ConstraintLayout>
