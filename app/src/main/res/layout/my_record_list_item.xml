<?xml version="1.0" encoding="utf-8"?>
<com.petra.lottery.OfficialBalloonLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_record_list_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/balloon_offical_shape_bg"
    >

  <TextView
      android:id="@+id/my_record_list_item_time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="4dp"
      android:layout_marginLeft="16dp"
      android:layout_marginTop="4dp"
      android:text="2017年1月17日"
      android:textSize="14sp"
      />

  <LinearLayout
      android:id="@+id/my_record_list_item_num_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/my_record_list_item_time"
      android:layout_marginLeft="24dp"
      android:layout_marginTop="4dp"
      android:weightSum="7.5"
      >

    <RelativeLayout
        style="@style/BalloonLayout"
        >
      <TextView
          android:id="@+id/official_red_1"
          style="@style/BalloonText"
          />

    </RelativeLayout>
    <RelativeLayout
        style="@style/BalloonLayout"
        >

      <TextView
          android:id="@+id/official_red_2"
          style="@style/BalloonText"
          />
    </RelativeLayout>
    <RelativeLayout
        style="@style/BalloonLayout"
        >

      <TextView
          android:id="@+id/official_red_3"
          style="@style/BalloonText"
          />
    </RelativeLayout>
    <RelativeLayout
        style="@style/BalloonLayout"
        >

      <TextView
          android:id="@+id/official_red_4"
          style="@style/BalloonText"
          />
    </RelativeLayout>
    <RelativeLayout
        style="@style/BalloonLayout"
        >

      <TextView
          android:id="@+id/official_red_5"
          style="@style/BalloonText"
          />
    </RelativeLayout>
    <RelativeLayout
        style="@style/BalloonLayout"
        >

      <TextView
          android:id="@+id/official_red_6"
          style="@style/BalloonText"
          />
    </RelativeLayout>
    <RelativeLayout
        android:layout_weight="1.3"
        style="@style/BalloonLayout"
        >

      <TextView
          android:id="@+id/official_blue"
          android:background="@drawable/balloon_shape_blue"
          style="@style/BalloonText"
          />
    </RelativeLayout>


  </LinearLayout>
</com.petra.lottery.OfficialBalloonLayout>
